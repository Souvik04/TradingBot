{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "TradingBotDb": "Server=localhost;Database=TradingBotDb;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "TradeSettings": {
    "EnableAutoBuy": true,
    "EnableAutoSell": true,
    "EnableSignalOnly": false,
    "MaxDailyBuyAmount": 10000.00,
    "MaxDailySellAmount": 10000.00,
    "MaxDailyTrades": 10,
    "TradeTypesEnabled": [
      "Intraday",
      "Swing",
      "LongTerm"
    ],
    "DefaultMode": "paper"
  },
  "SignalEngine": {
    "BaseUrl": "http://signal-engine:8000",
    "TimeoutSeconds": 30
  },
  "Broker": {
    "Type": "Mock",
    "PaperTrading": true
  }
}
