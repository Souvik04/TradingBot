{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "BrokerSettings": {
    "Broker": "Zerodha",
    "ApiKey": "<YOUR_API_KEY>",
    "ApiSecret": "<YOUR_API_SECRET>",
    "AccessToken": "<OPTIONAL_ACCESS_TOKEN>"
  },

  "TradingLimits": {
    "MaxDailyBuyAmount": 50000,
    "MaxDailySellAmount": 50000,
    "MaxTradesPerDay": 10,
    "RiskRewardRatio": 2.0
  },

  "TradingModes": {
    "EnableAutoBuy": true,
    "EnableAutoSell": true,
    "EnableSignalOnlyMode": false,
    "EnableLongTerm": true,
    "EnableShortTerm": true,
    "EnableIntraday": false,
    "EnableSwingTrade": true,
    "EnableOptions": false
  },

  "OrderPreferences": {
    "UseLimitOrders": true,
    "UseStopLoss": true,
    "UseGTT": false
  },

  "SignalEngine": {
    "BaseUrl": "http://localhost:5001", // Python engine port from docker-compose
    "EnableAIAnalysis": true
  }
}
